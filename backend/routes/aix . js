import express from "express";
const router = express.Router();

router.post("/", async (req, res) => {
    try {
        const userMessage = req.body.message || "";

        if (!userMessage.trim()) {
            return res.json({ error: "EMPTY_MESSAGE" });
        }

        // TEMP RESPONSE (ChatGPT style)
        return res.json({
            boss: true,
            reply: `Boss рдпреЗрдереЗ рдЖрд╣реЗ ЁЯШО тАФ рддреВ рдореНрд╣рдгрд╛рд▓рд╛рд╕: "${userMessage}".  
рдореА рд╣реЗ рд╕рдордЬреВрди рдШреЗрддрд▓рдВ рдЖрд╣реЗ. рдкреБрдврдЪрд╛ рдЖрджреЗрд╢ рд╕рд╛рдВрдЧ.`,
            success: true
        });
    } catch (e) {
        console.error("AIX ERROR:", e);
        return res.json({ error: "AIX_CRASH" });
    }
});

export default router;
